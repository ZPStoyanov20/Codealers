void Logic()
{
	switch (way)
	{
	case UP:
		
		break;
	}
}

void Input()
{
	if (_kbhit())
	{
		switch (_getch())
		{
		case 'a':
			way = LEFT;
			break;
		}
	}
}

int main()
{
    srand(time(0));
    while (game == true)
    {
        draw();
		Input();
		Logic();
        clear();
    }
}

