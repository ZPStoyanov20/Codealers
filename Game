void Logic()
{
	switch (way)
	{
	case LEFT:
		choose--;
		way = STOP;
		break;
	case RIGHT:
		choose++;
		way = STOP;
		break;
	case STOP:
		choose = choose;
		break;
	case withdraw:
		cards++;
		way = STOP;
		break;
	case START:
		menuOn = 0;
		way = STOP;
		break;
	case PUT:
		if (cards > 0)
		{
			Stick[choose] = 1;
			cards--;
		}
		way = STOP;
		break;
	}
}

void Input()
{
	
	if (_kbhit())
	{
		switch (_getch())
		{
		case '1':
			way = START;
			break;
			if (menuOn == 0)
			{
		case 'a':
			way = LEFT;
			break;

		case 'd':
			way = RIGHT;
			break;
		case 'q':
			way = withdraw;
			break;

		case 'e':
			way = PUT;
			break;
			}
		}
	}
	else
	{
		menu();
	}
}

int main()
{
	srand(time(0));
	for (int i = 0; i < 6; i++)
	{
		if (rand() % 2 == 1)
		{
			variation[i] = 1;
		}
		else
		{
			variation[i] = 0;
		}
	}
    while (game == true)
    {
		choice();
        draw();
		Input();
		Logic();
        clear();
    }
}
 
