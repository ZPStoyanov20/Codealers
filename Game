void choice()
{
	if (choose > 29)
	{
		choose = 0;
	}
	if (choose < 0)
	{
		choose = 29;
	}
	for (int i = 0; i <= 29; i++)
	{
		cardCon[i] = 0;
	}

	cardCon[choose] = 1;

	for (int i = 0; i <= 29; i++)
	{
		if (Stick[i] == 1)
		{
			cardCon[i] = 1;
		}
	}
}

void clear()
{
    HANDLE hOut;
    COORD Position;

    hOut = GetStdHandle(STD_OUTPUT_HANDLE);

    Position.X = 0;
    Position.Y = 0;
    SetConsoleCursorPosition(hOut, Position);
}

